<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="60dp"
    android:layout_width="fill_parent">

    <LinearLayout
        android:id="@+id/actual_post_button"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/post_button_height"
        android:clickable="true"
        android:gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/selector_post_button" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/create_post"
            android:src="@drawable/ic_post"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_post"
            android:paddingLeft="5dp"
            android:textSize="24sp"
            android:textColor="@color/mid_gray"/>

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/post_button_shadow_height"
        android:contentDescription="@string/create_post"
        android:src="@drawable/button_shadow"/>

</LinearLayout>
