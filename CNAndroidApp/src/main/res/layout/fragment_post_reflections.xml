<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_listview_background_color"
    android:orientation="vertical">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".85">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_text_field_2"
        android:padding="10dp"
        android:gravity="center"
        android:weightSum="1">

        <EditText
            android:id="@+id/submit_reflection_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_weight=".75"
            android:background="@android:color/transparent"
            android:hint="@string/reflection_hint_label"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/submit_reflection"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight=".25"
            android:padding="0dp"
            android:text="@string/reflection_send_label"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_gray_button"/>

    </LinearLayout>

</LinearLayout>