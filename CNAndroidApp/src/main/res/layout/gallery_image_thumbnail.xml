<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:clickable="true" >

    <view
        class="com.thecn.app.views.SquareView$SquareImageView"
        android:id="@+id/image"
        android:adjustViewBounds="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_thumbnail_description"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:weightSum="8">

        <view
            class="com.thecn.app.views.SquareView$SquareCheckbox"
            android:id="@+id/checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/selector_gallery_checkmark"
            android:clickable="false"/>

    </LinearLayout>

</RelativeLayout>
